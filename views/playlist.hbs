{{> welcomemenu}}

<section class="ui center aligned middle aligned segment">
  <section class="ui raised segment">
    <h2 class="ui header">
      {{playlist.title}}
    </h2>
    <table class="ui table">
      <thead>
        <tr>
          <th>Song</th>
          <th>Artist</th>
        </tr>
      </thead>
      <tbody>
        {{#each playlist.songs}}
          <tr>
            <td>
              {{title}}
            </td>
            <td>
              {{artist}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </section>
</section>